<mvc:View 
    controllerName="com.perezjquim.energysim.client.controller.Config" 
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:code="sap.ui.codeeditor">
    <Page 
    	title="{i18n>Config}">
        <Label class="sapUiTinyMargin" text="{i18n>config_user}"/>
        <code:CodeEditor
            type="json"
            editable="{= ${ws_state>/is_connected} &amp;&amp; !${ws_state>/is_sim_running} }"
            value="{ws_state>/config}"
            height="30vh"/>
        <Label class="sapUiTinyMargin" text="{i18n>config_sample}"/>
        <code:CodeEditor
            type="json"
            editable="false"
            value="{ path: 'config>/DEFAULT_SIM_CONFIG', formatter: '.stringifyJSON' }"
            height="30vh"/>            
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button 
                    type="Emphasized" 
                    blocked="{= !( ${ws_state>/is_connected} &amp;&amp; !${ws_state>/is_sim_running} ) }"
                    enabled="{= ${ws_state>/is_connected} &amp;&amp; !${ws_state>/is_sim_running} }"
                    text="{i18n>config_save}" 
                    press="onConfigSave"/>
            </OverflowToolbar>
        </footer>            
    </Page>
</mvc:View>