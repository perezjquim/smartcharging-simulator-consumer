<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<ResponsivePopover 
		placement="Bottom" 
		title="{i18n>sim_list}">
		<List 
			selectionChange="onSelectSim" 
			items="{sim_list>/}" 
			mode="SingleSelectMaster">
			<StandardListItem
				title="{sim_list>description}"/>
		</List>
	</ResponsivePopover>
</core:FragmentDefinition>