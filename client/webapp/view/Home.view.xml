<mvc:View 
    controllerName="com.perezjquim.energysim.client.controller.Home" 
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:stats="com.perezjquim.energysim.client.controller.util.stats">
    <Page 
    	title="{i18n>Home}">
        <f:SimpleForm 
        	editable="false">
            <f:content>
                <Label 
                	text="{i18n>ws_connection_state}" />
                <ObjectStatus 
                	icon="{ path: 'ws_state>/is_connected', formatter: '.formatWsStatusIcon' }"  
                	text="{ path: 'ws_state>/is_connected', formatter: '.formatWsStatusText' }" 
                	state="{ path: 'ws_state>/is_connected', formatter: '.formatWsStatus' }" />
                <Button
                    icon="sap-icon://synchronize"
                    press="onPressReconnect"
                    text="{i18n>ws_reconnect}"
                    type="Emphasized"
                    blocked="{= ${ws_state>/is_connected} }"/>                    
                <Label 
                	text="{i18n>sim_state}" />
                <ObjectStatus 
                	icon="{ path: 'ws_state>/is_sim_running', formatter: '.formatSimStatusIcon' }"  
                	text="{ path: 'ws_state>/is_sim_running', formatter: '.formatSimStatusText' }" 
                	state="{ path: 'ws_state>/is_sim_running', formatter: '.formatSimStatus' }" />
                <Button 
                	icon="sap-icon://play" 
                	press="onPressStart" 
                	text="{i18n>start_sim}" 
                	type="Accept" 
                	blocked="{= !( ${ws_state>/is_connected} &amp;&amp; !${ws_state>/is_sim_running} ) }"/>
                <Button
                	icon="sap-icon://stop" 
                	press="onPressStop" 
                	text="{i18n>stop_sim}" 
                	type="Reject" 
                	blocked="{= !( ${ws_state>/is_connected} &amp;&amp; ${ws_state>/is_sim_running} ) }"/>
            </f:content>
        </f:SimpleForm>
        <stats:GoogleChart 
            chartData="{ws_data>/home_stats}"
            chartTitle="{i18n>home_stats}"
            chartOptions="{             
                width: '100vw',
                height: '100vh'
            }"
            chartType="PieChart"/>
        <stats:GoogleChart 
            chartData="{ws_data>/car_stats}"
            chartTitle="{i18n>cars_stats_battery_linechart}"
            chartOptions="{             
                width: '100%',
                height: '100%'
            }"
            chartType="LineChart"/>
        <stats:GoogleChart 
            chartData="{ws_data>/plug_stats}"
            chartTitle="{i18n>plug_stats_energy_linechart}"
            chartOptions="{             
                width: '100%',
                height: '100%'
            }"
            chartType="LineChart"/>        
        <stats:GoogleChart 
            chartData="{ws_data>/travel_stats}"
            chartTitle="{i18n>travel_stats_linechart}"
            chartOptions="{             
                width: '100%',
                height: '100%'
            }"
            chartType="LineChart"/>                                            
    </Page>
</mvc:View>