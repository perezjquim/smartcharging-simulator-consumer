<mvc:View 
    controllerName="com.perezjquim.energysim.client.controller.Plugs" 
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:stats="com.perezjquim.energysim.client.controller.util.stats">
    <Page 
    	title="{i18n>Plugs}">
        <Table 
            items="{ws_data>/plugs}"
            fixedLayout="false">
            <columns>
                <Column>
                    <Text 
                        text="{i18n>plug_id}" />
                </Column>
                <Column>
                    <Text 
                        text="{i18n>plug_plugged_car_id}" />
                </Column>
                <Column>
                    <Text 
                        text="{i18n>plug_energy_consumption}" />
                </Column>                                     
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text 
                            text="{ws_data>id}"/>
                        <Text 
                            text="{= ${ws_data>plugged_car_id} ? ${ws_data>plugged_car_id} : '-' }"/>                    
                        <Text 
                            text="{ws_data>energy_consumption} KW"/>                                       
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <stats:GoogleChart 
            chartData="{ws_data>/plug_stats}"
            chartTitle="{i18n>plug_stats_energy_linechart}"
            chartOptions="{             
                width: '100%',
                height: '100%'
            }"
            chartType="LineChart"/>        
    </Page>
</mvc:View>