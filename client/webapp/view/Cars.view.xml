<mvc:View 
    controllerName="com.perezjquim.energysim.client.controller.Cars"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:stats="com.perezjquim.energysim.client.controller.util.stats">
    <Page 
    	title="{i18n>Cars}">
        <Table 
        	items="{ws_data>/cars}"
            fixedLayout="false">
            <columns>
                <Column>
                    <Text 
                    	text="{i18n>car_id}" />
                </Column>
                <Column>
                    <Text 
                    	text="{i18n>car_status}" />
                </Column>
                <Column>
                    <Text 
                    	text="{i18n>car_battery_level}" />
                </Column>
                <Column>
                    <Text 
                        text="{i18n>plug_id}" />
                </Column>                
                <Column>
                    <Text 
                    	text="{i18n>car_plug_consumption}" />
                </Column>
            </columns>
            <items>
                <ColumnListItem type="Navigation" press="onItemPress">
                    <cells>
                        <Text 
                        	text="{ws_data>id}"/>
                        <ObjectStatus
				            text="{ parts: [ 'ws_data>status' ], formatter: '.formatCarStatusText' }"
				            icon="{ parts: [ 'ws_data>status' ], formatter: '.formatCarStatusIcon' }"
				            state="{ parts: [ 'ws_data>status' ], formatter: '.formatCarStatus' }" />
                        <ProgressIndicator
                            displayAnimation="false"
                            percentValue="{ parts: [ 'ws_data>battery_level' ], formatter: '.formatBatteryLevelValue' }"
                            displayValue="{ parts: [ 'ws_data>battery_level' ], formatter: '.formatBatteryLevelText' }"
                            state="{ parts: [ 'ws_data>battery_level' ], formatter: '.formatBatteryLevelState' }"
                            showValue="true" />
                        <Link 
                            text="{ws_data>plug_id}"
                            active="{= !!${ws_data>plug_id} }"
                            href="{ parts: [ 'ws_data>plug_id' ], formatter: '.formatPlugHref' }"/>                            
                        <Text 
                        	text="{ws_data>plug_consumption} KW"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>