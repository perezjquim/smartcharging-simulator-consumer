<mvc:View controllerName="com.perezjquim.energysim.client.controller.Cars" displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns:tnt="sap.tnt" xmlns:uxap="sap.uxap">
	<Page title="{i18n>Cars}">
		<Table items="{ws_data>/cars}">			
			<columns>
				<Column>
					<Text text="{i18n>id}" />
				</Column>
				<Column>
					<Text text="{i18n>status}" />
				</Column>					
				<Column>
					<Text text="{i18n>battery_level}" />
				</Column>	
				<Column>
					<Text text="{i18n>plug_consumption}" />
				</Column>								
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<Text text="{ws_data>id}"/>						
						<ObjectStatus
							text="{ parts: [ 'ws_data>is_charging', 'ws_data>is_traveling' ], formatter: '.formatCarStatusText' }"
							icon="{ parts: [ 'ws_data>is_charging', 'ws_data>is_traveling' ], formatter: '.formatCarStatusIcon' }"
							state="{ parts: [ 'ws_data>is_charging', 'ws_data>is_traveling' ], formatter: '.formatCarStatus' }" />						
						<ObjectNumber
							number="{ws_data>battery_level}"
							state="{ path: 'ws_data>battery_level', formatter: '.formatBatteryLevelState' }" />
						<Text text="{ws_data>plug_consumption}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Page>
</mvc:View>