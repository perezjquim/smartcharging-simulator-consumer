<mvc:View 
    controllerName="com.perezjquim.energysim.client.controller.Travels" 
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:stats="com.perezjquim.energysim.client.controller.util.stats">
    <Page 
    	title="{i18n>Travels}">
        <Table 
            items="{ws_data>/travels}"
            fixedLayout="false">
            <columns>
                <Column>
                    <Text 
                        text="{i18n>travel_id}" />
                </Column>
                <Column>
                    <Text 
                        text="{i18n>car_id}" />
                </Column>
                <Column>
                    <Text 
                        text="{i18n>event_start_datetime}" />
                </Column>
                <Column>
                    <Text 
                        text="{i18n>event_end_datetime}" />
                </Column>
                <Column>
                    <Text 
                        text="{i18n>travel_distance}" />
                </Column>     
                <Column>
                    <Text 
                        text="{i18n>travel_battery_consumption}" />
                </Column>                                     
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text 
                            text="{ws_data>id}"/>
                        <Text 
                            text="{ws_data>car_id}"/>
                        <Text 
                            text="{ parts: [ 'ws_data>start_datetime' ], formatter: '.formatEventDatetime' }"/>                            
                        <Text 
                            text="{ parts: [ 'ws_data>end_datetime' ], formatter: '.formatEventDatetime' }"/>                
                        <Text 
                            text="{ws_data>distance} km"/>                 
                        <Text 
                            text="{ws_data>battery_consumption}"/>                                       
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <stats:GoogleChart 
            chartData="{ws_data>/travel_stats}"
            chartTitle="{i18n>travel_stats_linechart}"
            chartOptions="{             
                width: '100%',
                height: '100%'
            }"
            chartType="LineChart"/>        
    </Page>
</mvc:View>